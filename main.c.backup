#include <stdio.h>

int charInArr(char c, char *arr[], int len) {
  for(int i=0; i < len; i++) {
    if(*arr[i] == c) return 1;
  }
  return 0;
}

int main() {
  printf("Starting\n");

  char text[30];
  FILE *filePtr;

  fopen_s(&filePtr, "test.txt", "r");

  char instructionChars[128];

  int instructionIndex = 0;

  while(fgets(text, sizeof(text), filePtr) != NULL) {
    // Read loop
    // printf("Line: %s [", text);
    
    int i = 0;
    while(1) {
      char *breakArr[] = {"\n", "#", "\0"};
      char *continueArr[] = {">", "<", "+", "-", ".", ",", "[", "]"};

      int breakLen = sizeof(breakArr)/sizeof(breakArr[0]);
      int continueLen = sizeof(continueArr)/sizeof(continueArr[0]);

      if(charInArr(text[i], breakArr, breakLen)) break;
      if(!charInArr(text[i], continueArr, continueLen)) { i++; continue; }

      // printf("\"%c\", ", text[i]);
      instructionChars[instructionIndex++] = text[i];
      
      i++;
    }

    // printf("]\n");
  }

  int size = instructionIndex + 1;
  for(int i=0; i < size; i++) {
    printf("%c\n", instructionChars[i]);
  }

  return 0;
}
